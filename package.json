{
  "name": "tenzir-docs",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "generate:reference": "node scripts/generate-reference.js",
    "lint": "pnpm run lint:markdown && pnpm run lint:eslint && pnpm run lint:prettier && pnpm run lint:linkcheck",
    "lint:markdown": "markdownlint '**/*.md' '**/*.mdx' '**/*.mdoc' --ignore node_modules --ignore .astro",
    "lint:markdown:fix": "markdownlint '**/*.md' '**/*.mdx' '**/*.mdoc' --ignore node_modules --ignore .astro --fix",
    "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:eslint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:linkcheck": "RUN_LINK_CHECK=true pnpm build",
    "lint:fix": "pnpm run lint:markdown:fix && pnpm run lint:eslint:fix && pnpm run lint:prettier:fix",
    "postinstall": "node scripts/fix-starlight-llms-txt.js"
  },
  "dependencies": {
    "@astrojs/markdoc": "^0.15.8",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/starlight": "^0.36.2",
    "@astrojs/starlight-markdoc": "^0.5.1",
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "astro": "^5.15.4",
    "astro-breadcrumbs": "^3.3.1",
    "node-html-parser": "^7.0.1",
    "rehype-external-links": "^3.0.0",
    "sharp": "^0.34.5",
    "shiki": "^3.15.0",
    "starlight-links-validator": "^0.19.1",
    "starlight-llms-txt": "github:tenzir/starlight-llms-txt#topic/markdown-pages",
    "starlight-openapi": "^0.21.1",
    "starlight-sidebar-topics": "^0.6.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-plugin-astro": "^1.5.0",
    "markdownlint-cli": "^0.45.0",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2"
  }
}
