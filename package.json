{
  "name": "tenzir-docs",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "generate:reference": "node scripts/generate-reference.js",
    "lint:markdown": "markdownlint '**/*.md' '**/*.mdx' '**/*.mdoc' --ignore node_modules --ignore .astro",
    "lint:markdown:fix": "markdownlint '**/*.md' '**/*.mdx' '**/*.mdoc' --ignore node_modules --ignore .astro --fix",
    "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:eslint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:linkcheck": "RUN_LINK_CHECK=true pnpm build",
    "postinstall": "node scripts/fix-starlight-llms-txt.js"
  },
  "dependencies": {
    "@astrojs/markdoc": "^0.15.5",
    "@astrojs/sitemap": "^3.5.1",
    "@astrojs/starlight": "^0.35.2",
    "@astrojs/starlight-markdoc": "^0.5.0",
    "@fontsource-variable/inter": "^5.2.6",
    "@fontsource-variable/jetbrains-mono": "^5.2.6",
    "astro": "^5.13.3",
    "astro-breadcrumbs": "^3.3.1",
    "node-html-parser": "^7.0.1",
    "rehype-external-links": "^3.0.0",
    "sharp": "^0.34.3",
    "shiki": "^3.11.0",
    "starlight-links-validator": "^0.17.1",
    "starlight-llms-txt": "github:tenzir/starlight-llms-txt#topic/markdown-pages",
    "starlight-openapi": "^0.20.0",
    "starlight-sidebar-topics": "^0.6.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "eslint-plugin-astro": "^1.3.1",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2"
  }
}
