{
  "name": "tenzir-docs",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "generate": "bun run generate:changelog && bun run generate:claude-plugins && bun run generate:ocsf && bun run generate:docs-map && bun run generate:excalidraw",
    "generate:changelog": "node scripts/sync-changelog.mjs",
    "generate:claude-plugins": "node scripts/sync-claude-plugins.mjs",
    "generate:ocsf": "node scripts/sync-ocsf.mjs",
    "generate:ocsf:all": "node scripts/sync-ocsf.mjs --all",
    "generate:docs-map": "node scripts/generate-docs.mjs --map",
    "generate:docs-bundle": "node scripts/generate-docs.mjs --full",
    "generate:excalidraw": "node scripts/generate-excalidraw-svgs.mjs",
    "generate:skill": "node scripts/generate-skill.mjs",
    "generate:excalidraw:placeholders": "node scripts/generate-placeholder-svgs.mjs",
    "sync:openapi": "bash scripts/sync-openapi.sh",
    "lint": "bun run lint:markdown && bun run lint:eslint && bun run lint:prettier",
    "lint:markdown": "markdownlint '**/*.md' '**/*.mdx' --ignore node_modules --ignore .astro",
    "lint:markdown:fix": "markdownlint '**/*.md' '**/*.mdx' --ignore node_modules --ignore .astro --fix",
    "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:eslint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "build:linkcheck": "CHECK_LINKS=true bun run build",
    "build:full": "bun run generate && CHECK_LINKS=true LLMS_TXT=true bun run build",
    "lint:fix": "bun run lint:markdown:fix && bun run lint:eslint:fix && bun run lint:prettier:fix",
    "postinstall": "node scripts/fix-starlight-llms-txt.js"
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/starlight": "^0.37.1",
    "@excalidraw/utils": "0.1.3-test32",
    "@expressive-code/core": "0.41.5",
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "ajv": "^8.17.1",
    "astro": "^5.16.6",
    "astro-breadcrumbs": "^3.3.3",
    "feed": "^5.1.0",
    "jsdom": "^27.4.0",
    "mdast-util-to-string": "^4.0.0",
    "rehype-external-links": "^3.0.0",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "sharp": "^0.34.5",
    "shiki": "^3.20.0",
    "starlight-links-validator": "^0.19.2",
    "starlight-openapi": "^0.21.1",
    "starlight-sidebar-topics": "^0.6.2",
    "tree-sitter-tql": "^1.0.0",
    "unist-util-visit": "^5.0.0",
    "web-tree-sitter": "^0.26.3",
    "yaml": "^2.8.2",
    "starlight-llms-txt": "github:tenzir/starlight-llms-txt#topic/markdown-pages",
    "github-slugger": "^2.0.0",
    "hast-util-select": "^6.0.4",
    "micromatch": "^4.0.8",
    "rehype-parse": "^9.0.1",
    "rehype-remark": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.5",
    "unist-util-remove": "^4.0.0"
  },
  "devDependencies": {
    "@peculiar/webcrypto": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "markdownlint-cli": "^0.47.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4"
  }
}
