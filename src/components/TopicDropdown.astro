---
import { Icon } from '@astrojs/starlight/components';

/**
 * Dropdown component for selecting topics.
 * Used in the sidebar when a root topic is configured to use dropdown mode.
 */
interface Props {
  items: Array<{
    label: string;
    link: string;
    icon?: string;
    isCurrent: boolean;
  }>;
}

const { items } = Astro.props;
const currentItem = items.find((item) => item.isCurrent) || items[0];
---

<div class="topic-dropdown">
  <button
    type="button"
    class="topic-dropdown-trigger"
    aria-expanded="false"
    aria-haspopup="listbox"
  >
    {currentItem?.icon && (
      <span class="topic-dropdown-trigger-icon">
        <Icon name={currentItem.icon} />
      </span>
    )}
    <span class="topic-dropdown-label">{currentItem?.label}</span>
    <svg
      class="topic-dropdown-chevron"
      width="16"
      height="16"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
  </button>
  <ul class="topic-dropdown-menu" role="listbox" hidden>
    {items.map((item) => (
      <li role="option" aria-selected={item.isCurrent ? "true" : "false"}>
        <a
          href={item.link}
          class:list={['topic-dropdown-item', { 'is-current': item.isCurrent }]}
        >
          {item.icon && (
            <span class="topic-dropdown-icon">
              <Icon name={item.icon} />
            </span>
          )}
          <span>{item.label}</span>
        </a>
      </li>
    ))}
  </ul>
</div>

<script>
  // Handle dropdown toggle
  document.querySelectorAll('.topic-dropdown').forEach((dropdown) => {
    const trigger = dropdown.querySelector('.topic-dropdown-trigger');
    const menu = dropdown.querySelector('.topic-dropdown-menu');

    if (!trigger || !menu) return;

    trigger.addEventListener('click', () => {
      const isExpanded = trigger.getAttribute('aria-expanded') === 'true';
      trigger.setAttribute('aria-expanded', String(!isExpanded));
      menu.hidden = isExpanded;
    });

    // Close on click outside
    document.addEventListener('click', (e) => {
      if (!dropdown.contains(e.target as Node)) {
        trigger.setAttribute('aria-expanded', 'false');
        menu.hidden = true;
      }
    });

    // Close on escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        trigger.setAttribute('aria-expanded', 'false');
        menu.hidden = true;
      }
    });
  });
</script>

<style>
  .topic-dropdown {
    position: relative;
    margin-bottom: var(--tnz-space-4);
  }

  .topic-dropdown-trigger {
    display: flex;
    align-items: center;
    gap: var(--tnz-space-2);
    width: 100%;
    padding: var(--tnz-space-2) var(--tnz-space-3);
    background-color: var(--tnz-neutral-700);
    border: 1px solid var(--tnz-neutral-600);
    border-radius: var(--tnz-radius);
    color: var(--tnz-neutral-100);
    font-size: var(--tnz-text-sm);
    font-weight: var(--tnz-font-medium);
    cursor: pointer;
    transition: all var(--tnz-transition-base);
    text-align: left;
  }

  .topic-dropdown-trigger:hover {
    background-color: var(--tnz-neutral-600);
    border-color: var(--tnz-neutral-500);
  }

  .topic-dropdown-trigger:focus-visible {
    outline: 2px solid var(--tnz-primary-500);
    outline-offset: 2px;
  }

  .topic-dropdown-trigger[aria-expanded='true'] {
    background-color: var(--tnz-neutral-600);
    border-color: var(--tnz-neutral-500);
  }

  .topic-dropdown-trigger[aria-expanded='true'] .topic-dropdown-chevron {
    transform: rotate(180deg);
  }

  .topic-dropdown-trigger-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    width: 16px;
    height: 16px;
  }

  .topic-dropdown-label {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .topic-dropdown-chevron {
    flex-shrink: 0;
    width: 16px;
    height: 16px;
    color: var(--tnz-neutral-400);
    transition: transform var(--tnz-transition-base);
  }

  .topic-dropdown-menu {
    position: absolute;
    top: calc(100% + var(--tnz-space-1));
    left: 0;
    right: 0;
    z-index: var(--tnz-z-dropdown);
    margin: 0;
    padding: var(--tnz-space-1);
    background-color: var(--tnz-neutral-700);
    border: 1px solid var(--tnz-neutral-600);
    border-radius: var(--tnz-radius);
    box-shadow: var(--tnz-shadow-m);
    list-style: none;
    max-height: 300px;
    overflow-y: auto;
  }

  .topic-dropdown-menu li {
    margin: 0;
  }

  .topic-dropdown-item {
    display: flex;
    align-items: center;
    gap: var(--tnz-space-2);
    padding: var(--tnz-space-2) var(--tnz-space-3);
    color: var(--tnz-neutral-200);
    font-size: var(--tnz-text-sm);
    text-decoration: none;
    border-radius: var(--tnz-radius-sm);
    transition: all var(--tnz-transition-base);
  }

  .topic-dropdown-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    width: 16px;
    height: 16px;
    color: var(--tnz-neutral-400);
  }

  .topic-dropdown-item:hover .topic-dropdown-icon,
  .topic-dropdown-item.is-current .topic-dropdown-icon {
    color: inherit;
  }

  .topic-dropdown-item:hover {
    background-color: var(--tnz-neutral-600);
    color: var(--tnz-neutral-100);
  }

  .topic-dropdown-item.is-current {
    background-color: var(--tnz-primary-500);
    color: var(--tnz-neutral-50);
  }

  .topic-dropdown-item.is-current:hover {
    background-color: var(--tnz-primary-400);
  }

  /* Light mode */
  :global([data-theme='light']) .topic-dropdown-trigger {
    background-color: var(--tnz-neutral-100);
    border-color: var(--tnz-neutral-300);
    color: var(--tnz-neutral-800);
  }

  :global([data-theme='light']) .topic-dropdown-trigger:hover {
    background-color: var(--tnz-neutral-200);
    border-color: var(--tnz-neutral-400);
  }

  :global([data-theme='light']) .topic-dropdown-trigger[aria-expanded='true'] {
    background-color: var(--tnz-neutral-200);
    border-color: var(--tnz-neutral-400);
  }

  :global([data-theme='light']) .topic-dropdown-chevron {
    color: var(--tnz-neutral-500);
  }

  :global([data-theme='light']) .topic-dropdown-menu {
    background-color: var(--tnz-neutral-50);
    border-color: var(--tnz-neutral-300);
  }

  :global([data-theme='light']) .topic-dropdown-item {
    color: var(--tnz-neutral-700);
  }

  :global([data-theme='light']) .topic-dropdown-item:hover {
    background-color: var(--tnz-neutral-200);
    color: var(--tnz-neutral-800);
  }

  :global([data-theme='light']) .topic-dropdown-item.is-current {
    background-color: var(--tnz-primary-500);
    color: var(--tnz-neutral-50);
  }
</style>
