---
import { getCollection } from "astro:content";
import { pathWithBase } from "@utils/base";
import { resolvePageTitle } from "@utils/page-title";
import PlugIcon from "../icons/PlugIcon.astro";

// Build lookup map for page titles
const allDocs = await getCollection("docs");
const docsMap = new Map(allDocs.map((entry) => [entry.id, entry]));

const path = Astro.slots.has("default")
  ? (await Astro.slots.render("default")).trim()
  : "";
const href = pathWithBase(`/integrations/${path}`);

const title = resolvePageTitle(docsMap, "integrations", path);
---

<span class="inline-icon-wrapper" data-tooltip="Integration"><PlugIcon class="inline-icon" /></span><a href={href}>{title}</a>
