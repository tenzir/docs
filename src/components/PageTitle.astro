---
import type { Props } from '@astrojs/starlight/props';
import { getEntry } from 'astro:content';
import { getSearchWeight } from '../search-weights';

// PAGE_TITLE_ID is just '_top' in Starlight
const PAGE_TITLE_ID = '_top';

// Get the current path segments
const currentPath = Astro.url.pathname;
const segments = currentPath.split('/').filter(Boolean);

// Don't show breadcrumbs on the home page
const isHomePage = currentPath === '/' || segments.length === 0;

// Get search weight configuration for pagefind metadata
const { starlightRoute } = Astro.locals;
const weightConfig = getSearchWeight(starlightRoute.id);
const pagefindType = weightConfig?.metadata?.type;
const pagefindWeight = weightConfig?.weight;

// Build h1 attributes
const h1Attrs: Record<string, any> = {
  id: PAGE_TITLE_ID,
  'data-pagefind-meta': 'title'
};
if (pagefindWeight !== undefined) {
  h1Attrs['data-pagefind-weight'] = pagefindWeight * 100000;
}

// Helper to capitalize slug segments as fallback
function formatSlug(slug: string): string {
  return slug
    .split('-')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
}

// Build custom crumbs array with page titles
interface BreadcrumbItem {
  text: string;
  href: string;
  class?: string;
  onclick?: string;
  tabindex?: string;
}

const crumbs: BreadcrumbItem[] = [];

// Build breadcrumbs for each path segment
for (let i = 0; i < segments.length; i++) {
  const pathSegments = segments.slice(0, i + 1);
  const href = '/' + pathSegments.join('/');
  const slug = pathSegments.join('/');
  const currentSegment = segments[i];

  // Try to get the page title from content collection
  let title: string | null = null;
  let pageExists = false;

  // Try index page first (e.g., guides/index.mdx for /guides)
  const indexEntry = await getEntry('docs', `${slug}/index`);
  if (indexEntry) {
    title = indexEntry.data.title;
    pageExists = true;
  } else {
    // Try direct page (e.g., guides/quickstart.mdx for /guides/quickstart)
    const directEntry = await getEntry('docs', slug);
    if (directEntry) {
      title = directEntry.data.title;
      pageExists = true;
    }
  }

  // Use formatted slug as fallback if no page found
  const text = title || formatSlug(currentSegment);

  const crumb: BreadcrumbItem = {
    text,
    href: pageExists ? href : '#',
  };

  // Add disabled styling for non-existent pages
  if (!pageExists) {
    crumb.class = 'c-breadcrumbs__link breadcrumb-disabled';
    crumb.onclick = 'return false;';
    crumb.tabindex = '-1';
  }

  crumbs.push(crumb);
}
---

<div class="page-title-with-breadcrumbs">
  {pagefindType && (
    <meta data-pagefind-meta={`type:${pagefindType}`} />
  )}
  {!isHomePage && (
    <nav class="c-breadcrumbs" aria-label="Breadcrumbs">
      <ol class="c-breadcrumbs__crumbs">
        <li class="c-breadcrumbs__crumb">
          <a href="/" class="c-breadcrumbs__link c-breadcrumbs__link--home" aria-label="Home">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
              <polyline points="9 22 9 12 15 12 15 22"></polyline>
            </svg>
          </a>
          <span class="c-breadcrumbs__separator" aria-hidden="true">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </span>
        </li>
        {crumbs.map((crumb, index) => (
          <li class="c-breadcrumbs__crumb">
            <a
              href={crumb.href}
              class:list={[
                'c-breadcrumbs__link',
                { 'breadcrumb-disabled': crumb.class?.includes('breadcrumb-disabled') },
                { 'is-current': index === crumbs.length - 1 }
              ]}
              aria-current={index === crumbs.length - 1 ? 'page' : undefined}
              onclick={crumb.onclick}
              tabindex={crumb.tabindex}
            >
              {crumb.text}
            </a>
            {index < crumbs.length - 1 && (
              <span class="c-breadcrumbs__separator" aria-hidden="true">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
              </span>
            )}
          </li>
        ))}
      </ol>
    </nav>
  )}
  <h1 {...h1Attrs}>
    {starlightRoute.entry.data.title}
  </h1>
</div>

<style>
  .page-title-with-breadcrumbs {
    display: contents;
  }

  /* Page title h1 styles */
  h1 {
    margin-top: var(--tnz-space-3);
    font-size: var(--sl-text-h1);
    line-height: var(--sl-line-height-headings);
    font-weight: var(--tnz-font-semibold);
    color: var(--sl-color-white);
    letter-spacing: -0.02em;
  }

  /* Breadcrumb Component Styles */
  .c-breadcrumbs {
    margin-bottom: var(--tnz-space-4);
    font-size: var(--tnz-text-sm);
    line-height: var(--tnz-leading-sm);
  }

  .c-breadcrumbs__crumbs {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--tnz-space-0-5);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .c-breadcrumbs__crumb {
    display: flex;
    align-items: center;
    gap: var(--tnz-space-0-5);
  }

  .c-breadcrumbs__link,
  .c-breadcrumbs__link:link,
  .c-breadcrumbs__link:visited {
    color: var(--tnz-neutral-400);
    text-decoration: none;
    border-bottom: none;
    transition: color var(--tnz-transition-base);
    display: inline-flex;
    align-items: center;
    padding: var(--tnz-space-0-5) var(--tnz-space-1);
    border-radius: var(--tnz-radius-sm);
  }

  .c-breadcrumbs__link:hover,
  .c-breadcrumbs__link:focus {
    color: var(--sl-color-white);
    text-decoration: none;
    border-bottom: none;
  }

  .c-breadcrumbs__link.is-current {
    color: var(--sl-color-white);
    font-weight: var(--tnz-font-medium);
    pointer-events: none;
  }

  /* Disabled breadcrumb link (intermediate path without page) */
  .c-breadcrumbs__link.breadcrumb-disabled {
    pointer-events: none;
    text-decoration: none;
    color: var(--tnz-neutral-500);
    cursor: default;
  }

  .c-breadcrumbs__link--home {
    padding: var(--tnz-space-0-5);
  }

  .c-breadcrumbs__link--home svg {
    width: 14px;
    height: 14px;
  }

  .c-breadcrumbs__separator {
    color: var(--tnz-neutral-600);
    display: flex;
    align-items: center;
  }

  .c-breadcrumbs__separator svg {
    width: 12px;
    height: 12px;
  }

  /* Light mode */
  :root[data-theme='light'] .c-breadcrumbs__link,
  :root[data-theme='light'] .c-breadcrumbs__link:link,
  :root[data-theme='light'] .c-breadcrumbs__link:visited {
    color: var(--tnz-neutral-500);
    text-decoration: none;
    border-bottom: none;
  }

  :root[data-theme='light'] .c-breadcrumbs__link:hover,
  :root[data-theme='light'] .c-breadcrumbs__link:focus {
    color: var(--tnz-neutral-800);
    text-decoration: none;
    border-bottom: none;
  }

  :root[data-theme='light'] .c-breadcrumbs__link.is-current {
    color: var(--tnz-neutral-800);
  }

  :root[data-theme='light'] .c-breadcrumbs__link.breadcrumb-disabled {
    color: var(--tnz-neutral-400);
  }

  :root[data-theme='light'] .c-breadcrumbs__separator {
    color: var(--tnz-neutral-300);
  }

  @media (max-width: 50rem) {
    h1 {
      margin-top: var(--tnz-space-2);
    }

    .c-breadcrumbs {
      font-size: var(--tnz-text-sm);
      margin-bottom: var(--tnz-space-3);
    }

    .c-breadcrumbs__crumbs {
      gap: var(--tnz-space-0-5);
    }

    .c-breadcrumbs__link {
      padding: var(--tnz-space-0-5);
    }

    .c-breadcrumbs__link--home {
      padding: var(--tnz-space-0-5);
    }

    .c-breadcrumbs__link--home svg {
      width: 12px;
      height: 12px;
    }

    .c-breadcrumbs__separator svg {
      width: 10px;
      height: 10px;
    }
  }
</style>
