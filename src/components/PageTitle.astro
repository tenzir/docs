---
import type { Props } from '@astrojs/starlight/props';
import { Breadcrumbs } from 'astro-breadcrumbs';
import 'astro-breadcrumbs/breadcrumbs.css';
import { getSearchWeight } from '../search-weights';

// PAGE_TITLE_ID is just '_top' in Starlight
const PAGE_TITLE_ID = '_top';

// Get the current path segments
const currentPath = Astro.url.pathname;
const segments = currentPath.split('/').filter(Boolean);

// Don't show breadcrumbs on the home page
const isHomePage = currentPath === '/' || segments.length === 0;

// Get search weight configuration for pagefind metadata
const { starlightRoute } = Astro.locals;
const weightConfig = getSearchWeight(starlightRoute.id);
const pagefindType = weightConfig?.metadata?.type;
const pagefindWeight = weightConfig?.weight;

// Build h1 attributes
const h1Attrs: Record<string, any> = {
  id: PAGE_TITLE_ID,
  'data-pagefind-meta': 'title'
};
if (pagefindWeight !== undefined) {
  h1Attrs['data-pagefind-weight'] = pagefindWeight * 100000;
}

// Build customization array for breadcrumb links
const customizeLinks: any[] = [];

// For each intermediate segment, check if we need to customize it
for (let i = 0; i < segments.length - 1; i++) {
  const pathToCheck = '/' + segments.slice(0, i + 1).join('/');

  // Check if a page exists at this path
  let pageExists = true;
  try {
    // Use import.meta.glob to check if there's an index page at this path
    const allPages = import.meta.glob('/src/content/docs/**/*.{md,mdx,mdoc}', { query: '?raw', import: 'default' });

    // Check if this path has a corresponding page
    const hasIndex = Object.keys(allPages).some(key =>
      key === `/src/content/docs${pathToCheck}/index.md` ||
      key === `/src/content/docs${pathToCheck}/index.mdx` ||
      key === `/src/content/docs${pathToCheck}/index.mdoc` ||
      key === `/src/content/docs${pathToCheck.replace(/\/$/, '')}.md` ||
      key === `/src/content/docs${pathToCheck.replace(/\/$/, '')}.mdx` ||
      key === `/src/content/docs${pathToCheck.replace(/\/$/, '')}.mdoc`
    );

    pageExists = hasIndex;
  } catch (e) {
    // If we can't determine, assume it exists
    pageExists = true;
  }

  if (!pageExists) {
    // This intermediate path doesn't exist, so make it non-clickable
    // Include c-breadcrumbs__link base class since the library replaces rather than merges classes
    customizeLinks.push({
      index: i + 1, // +1 because index 0 is Home
      href: '#',
      class: 'c-breadcrumbs__link breadcrumb-disabled',
      onclick: 'return false;',
      tabindex: '-1'
    });
  }
}
---

<div class="page-title-with-breadcrumbs">
  {pagefindType && (
    <meta data-pagefind-meta={`type:${pagefindType}`} />
  )}
  {!isHomePage && (
    <Breadcrumbs customizeLinks={customizeLinks}>
    <svg
      slot="index"
      xmlns="http://www.w3.org/2000/svg"
      width="16"
      height="16"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      aria-label="Home"
    >
      <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
      <polyline points="9 22 9 12 15 12 15 22"></polyline>
    </svg>
    <svg
      slot="separator"
      xmlns="http://www.w3.org/2000/svg"
      width="16"
      height="16"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      aria-hidden="true"
    >
      <polyline points="9 18 15 12 9 6"></polyline>
    </svg>
    </Breadcrumbs>
  )}
  <h1 {...h1Attrs}>
    {starlightRoute.entry.data.title}
  </h1>
</div>

<style>
  .page-title-with-breadcrumbs {
    display: contents;
  }

  /* Page title h1 styles */
  h1 {
    margin-top: var(--tnz-space-3);
    font-size: var(--sl-text-h1);
    line-height: var(--sl-line-height-headings);
    font-weight: var(--tnz-font-semibold);
    color: var(--sl-color-white);
    letter-spacing: -0.02em;
  }

  /* Breadcrumb Component Styles */
  :global(.c-breadcrumbs) {
    --size-font-breadcrumbs: var(--tnz-text-sm);
    margin-bottom: var(--tnz-space-4);
    font-size: var(--tnz-text-sm);
    line-height: var(--tnz-leading-sm);
  }

  :global(.c-breadcrumbs__crumbs) {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--tnz-space-0-5);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  :global(.c-breadcrumbs__crumb) {
    display: flex;
    align-items: center;
    gap: var(--tnz-space-0-5);
  }

  :global(.c-breadcrumbs__link),
  :global(.c-breadcrumbs__link:link),
  :global(.c-breadcrumbs__link:visited) {
    color: var(--tnz-neutral-400) !important;
    text-decoration: none !important;
    border-bottom: none !important;
    transition: color var(--tnz-transition-base);
    display: inline-flex;
    align-items: center;
    padding: var(--tnz-space-0-5) var(--tnz-space-1);
    border-radius: var(--tnz-radius-sm);
  }

  :global(.c-breadcrumbs__link:hover),
  :global(.c-breadcrumbs__link:focus) {
    color: var(--sl-color-white) !important;
    text-decoration: none !important;
    border-bottom: none !important;
  }

  :global(.c-breadcrumbs__link.is-current) {
    color: var(--sl-color-white);
    font-weight: var(--tnz-font-medium);
    pointer-events: none;
  }

  /* Disabled breadcrumb link (intermediate path without page) */
  :global(.c-breadcrumbs__link.breadcrumb-disabled) {
    pointer-events: none;
    text-decoration: none;
    color: var(--tnz-neutral-500);
    cursor: default;
  }

  :global(.c-breadcrumbs__link.is-index) {
    padding: var(--tnz-space-0-5);
  }

  :global(.c-breadcrumbs__link.is-index svg) {
    width: 14px;
    height: 14px;
  }

  :global(.c-breadcrumbs__separator) {
    color: var(--tnz-neutral-600);
    display: flex;
    align-items: center;
  }

  :global(.c-breadcrumbs__separator svg) {
    width: 12px;
    height: 12px;
  }

  /* Light mode */
  :global([data-theme='light'] .c-breadcrumbs__link),
  :global([data-theme='light'] .c-breadcrumbs__link:link),
  :global([data-theme='light'] .c-breadcrumbs__link:visited) {
    color: var(--tnz-neutral-500) !important;
    text-decoration: none !important;
    border-bottom: none !important;
  }

  :global([data-theme='light'] .c-breadcrumbs__link:hover),
  :global([data-theme='light'] .c-breadcrumbs__link:focus) {
    color: var(--tnz-neutral-800) !important;
    text-decoration: none !important;
    border-bottom: none !important;
  }

  :global([data-theme='light'] .c-breadcrumbs__link.is-current) {
    color: var(--tnz-neutral-800);
  }

  :global([data-theme='light'] .c-breadcrumbs__link.breadcrumb-disabled) {
    color: var(--tnz-neutral-400);
  }

  :global([data-theme='light'] .c-breadcrumbs__separator) {
    color: var(--tnz-neutral-300);
  }

  @media (max-width: 50rem) {
    h1 {
      margin-top: var(--tnz-space-2);
    }

    :global(.c-breadcrumbs) {
      --size-font-breadcrumbs: var(--tnz-text-sm);
      font-size: var(--tnz-text-sm);
      margin-bottom: var(--tnz-space-3);
    }

    :global(.c-breadcrumbs__crumbs) {
      gap: var(--tnz-space-0-5);
    }

    :global(.c-breadcrumbs__link) {
      padding: var(--tnz-space-0-5);
    }

    :global(.c-breadcrumbs__link.is-index) {
      padding: var(--tnz-space-0-5);
    }

    :global(.c-breadcrumbs__link.is-index svg) {
      width: 12px;
      height: 12px;
    }

    :global(.c-breadcrumbs__separator svg) {
      width: 10px;
      height: 10px;
    }
  }
</style>
