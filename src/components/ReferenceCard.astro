---
export interface Props {
  title: string;
  description: string;
  href: string;
}

const { title, description, href } = Astro.props;

// Simple markdown to HTML conversion for inline elements
function renderMarkdown(text: string): string {
  return text
    .replace(
      /\[([^\]]+)\]\(([^)]+)\)/g,
      '<a href="$2" target="_blank" rel="noopener noreferrer">$1</a>',
    )
    .replace(/`([^`]+)`/g, "<code>$1</code>")
    .replace(/\*\*([^*]+)\*\*/g, "<strong>$1</strong>")
    .replace(/\*([^*]+)\*/g, "<em>$1</em>");
}

const renderedDescription = renderMarkdown(description);
---

<div class="reference-card">
  <div class="reference-card-header">
    <a href={href} class="reference-card-title-link">
      <h3 class="reference-card-title">{title}</h3>
      <span class="reference-card-arrow">â†’</span>
    </a>
  </div>
  {/* eslint-disable-next-line astro/no-set-html-directive */}
  <div class="reference-card-description" set:html={renderedDescription} />
  <div class="reference-card-example">
    <slot />
  </div>
</div>

<style>
  .reference-card {
    border: 1px solid var(--tnz-neutral-600);
    border-radius: var(--tnz-radius);
    padding: var(--tnz-space-4);
    background: var(--tnz-neutral-800);
    height: 100%;
    display: flex;
    flex-direction: column;
    transition: transform var(--tnz-transition-base),
                box-shadow var(--tnz-transition-base),
                border-color var(--tnz-transition-base),
                background-color var(--tnz-transition-base);
  }

  .reference-card:hover {
    transform: translateY(-2px);
    border-color: var(--tnz-neutral-500);
  }

  /* Dark mode hover */
  :root[data-theme="dark"] .reference-card:hover {
    background-color: color-mix(in srgb, var(--tnz-neutral-700) 50%, var(--tnz-neutral-800));
    box-shadow: var(--tnz-shadow-s);
  }

  /* Light mode styles */
  :root[data-theme="light"] .reference-card {
    background-color: var(--tnz-neutral-50);
    border-color: var(--tnz-neutral-250);
  }

  :root[data-theme="light"] .reference-card:hover {
    background-color: var(--tnz-neutral-50);
    border-color: var(--tnz-neutral-300);
    box-shadow: var(--tnz-shadow-s-light);
  }

  :root[data-theme="light"] .reference-card-title {
    color: var(--tnz-neutral-800);
  }

  :root[data-theme="light"] .reference-card-description {
    color: var(--tnz-neutral-600);
  }

  :root[data-theme="light"] .reference-card-description code {
    background: var(--tnz-neutral-100);
    border-color: var(--tnz-neutral-250);
  }

  :root[data-theme="light"] .reference-card-example pre {
    background: var(--tnz-neutral-100);
    border-color: var(--tnz-neutral-250);
  }

  .reference-card-title-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--tnz-space-2);
  }

  .reference-card-title-link:hover {
    color: var(--tnz-primary-400);
    text-decoration: none;
  }

  :root[data-theme="light"] .reference-card-title-link:hover {
    color: var(--tnz-primary-500);
  }

  /* Override global markdown link hover styles with higher specificity */
  :global(.sl-markdown-content .reference-card-title-link:hover) {
    text-decoration: none !important;
  }

  .reference-card-header {
    margin-bottom: var(--tnz-space-2);
  }

  .reference-card-title {
    margin: 0;
    font-size: var(--tnz-text-base);
    font-weight: var(--tnz-font-semibold);
    color: var(--tnz-neutral-100);
    font-family: var(--tnz-font-mono);
  }

  .reference-card-description {
    margin: 0 0 var(--tnz-space-3) 0;
    color: var(--tnz-neutral-400);
    font-size: var(--tnz-text-sm);
    line-height: var(--tnz-leading-sm);
    flex-grow: 1;
  }

  .reference-card-description code {
    background: var(--tnz-neutral-700);
    border: 1px solid var(--tnz-neutral-600);
    padding: var(--tnz-space-0-5) var(--tnz-space-1);
    border-radius: var(--tnz-radius-sm);
    font-family: var(--tnz-font-mono);
    font-size: 0.9em;
  }

  .reference-card-description a {
    color: var(--tnz-primary-400);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color var(--tnz-transition-base);
  }

  .reference-card-description a:hover {
    text-decoration: none;
    border-bottom-color: var(--tnz-primary-400);
  }

  :root[data-theme="light"] .reference-card-description a {
    color: var(--tnz-primary-500);
  }

  :root[data-theme="light"] .reference-card-description a:hover {
    border-bottom-color: var(--tnz-primary-500);
  }

  .reference-card-example {
    margin-top: auto;
    padding-top: var(--tnz-space-3);
  }

  .reference-card-example pre {
    margin: 0;
    padding: var(--tnz-space-2) var(--tnz-space-3);
    background: var(--tnz-neutral-700);
    border: 1px solid var(--tnz-neutral-600);
    border-radius: var(--tnz-radius-sm);
    font-size: var(--tnz-text-xs);
    overflow-x: auto;
    font-family: var(--tnz-font-mono);
  }

  .reference-card-arrow {
    color: var(--tnz-primary-400);
    font-size: var(--tnz-text-lg);
    opacity: 0;
    transform: translateX(-4px);
    transition: opacity var(--tnz-transition-base), transform var(--tnz-transition-base);
    flex-shrink: 0;
  }

  :root[data-theme="light"] .reference-card-arrow {
    color: var(--tnz-primary-500);
  }

  .reference-card:hover .reference-card-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .reference-card {
      transition: none;
    }

    .reference-card:hover {
      transform: none;
    }

    .reference-card-arrow {
      transform: none;
    }
  }
</style>
